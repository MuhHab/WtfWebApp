@model AdminViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Administration</h2>

<h3>All Articles</h3>
<table class="striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Status</th>
            <th>Author</th>
            <th>Series</th>
            <th>Title</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model.UnpublishedArticles)
        { 
            <tr>
                <td>@article.PublishedDate</td>
                <td>@article.Status</td>
                <td>@article.Author.Name</td>
                <td>@article.Series</td>
                <td>@article.Title</td>
                <td><a href="/admin/edit-article/@article.Id">Edit</a></td>
                <td><a href="/admin/set-article-status/@article.Id">Set Status</a></td>
            </tr>
        }
    </tbody>
</table>

<div class="medium primary btn">
    <a href="/admin/new-article">New Article</a>
</div>
