@model AddendumViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="commentsWrapper">
    <ul class="comments">
        <li class="comment" id="comment-@Model.Comment.Id">
            <div>
                @Html.Raw(Model.Comment.BodyHtml)
            </div>

            <form method="post">

                @Html.ValidationSummary()

                @Html.AntiForgeryToken()

                <div class="field">
                    <label for="comment-body">Addendum:</label>
                    <textarea id="comment-body" name="body" class="input textarea resizeable" rows="6" required tabindex="1"></textarea>
                </div>

                <div class="medium primary btn">
                    <input class="input" type="submit" tabindex="2" value="Submit" />
                </div>
            </form>
        </li>
    </ul>
</div>
