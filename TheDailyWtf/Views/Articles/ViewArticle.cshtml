@model ViewArticleViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row @Model.Article.Series.CssClass" id="articlePage">

    <div class="twelve columns articleWrapper">
        <div class="content">
            <div class="row">
                <div class="container">

                    <h1>@Model.Article.Title</h1>
                    <span class="articleMeta">By <a href="/authors/@Model.Article.Author.Slug">@Model.Article.Author.Name</a> <span class="date">on  @Model.Article.PublishedDate.Value.ToShortDateString()</span>
                    </span>

                    <div class="author hideMobile">
                        <div class="authorPic fadeInDown">
                            <img src="@Model.Article.Author.ImageUrl">
                        </div>
                        <br />

                        <h4>@Model.Article.Author.Name</h4>
                        <p class="short-description">@Model.Article.Author.ShortDescription</p>
                    </div>

                    <div class="social">
                        <div class="socialButtons">                            
                            <a class="social-icon facebook" href="@Model.Article.FacebookUrl">&nbsp;</a>
                            <a class="social-icon twitter" href="@Model.Article.TwitterUrl">&nbsp;</a>
                            <a class="social-icon reddit" href="@Model.Article.RedditUrl">&nbsp;</a>
                            <a class="social-icon linked-in" href="@Model.Article.LinkedInUrl">&nbsp;</a>
                        </div>
                    </div>

                    <div class="article-body">
                        @Html.Raw(Model.Article.BodyHtml)
                    </div>

                    <div class="clearfix"></div>
                    <hr />

                    <footer class="">
                        <div class="row">
                            <div class="four columns">
                                <h5 class="heading"><i class="icon-doc-text-inv"></i>Similar Articles</h5>
                                @Html.Partial(Views.Shared.PartialRecentArticleList, Model.SimilarArticles)
                            </div>
                            <div class="eight columns">
                                @Html.Partial(Views.Shared.PartialComments, Model.FeaturedComments)
                                <div>
                                    <a href="@(Model.Article.DiscourseThreadUrl)">View All Comments &raquo;</a>
                                </div>
                            </div>
                        </div>
                    </footer>
                </div>
            </div>
        </div>
    </div>
</div>
