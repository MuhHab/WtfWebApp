@model ViewCommentsViewModel
@{
   Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row @Model.Article.Series.CssClass" id="articlePage">
   <div class="twelve columns articleWrapper">
      <div class="content">
         <div class="row">
            <div class="container">

               <h1>@Model.Article.Title</h1>      
               <span class="articleMeta">@Model.ViewCommentsHeading</span>         
                  <div class="row">
                     <div class="twelve columns">
                        @if (Model.Article.DiscourseTopicId != null)
                        {
                           <a style="float: right;" href="@Model.DiscourseTopicUrl" target="_blank">Continue this discussion on Discourse &raquo;</a>
                        }
                        
                        @Html.Partial(Views.Shared.PartialComments, Model.Comments)
                     </div>
                  </div>
               <div>
                  <a href="@Model.Article.Url">&laquo; Return to Article</a>
                  @if (Model.Article.DiscourseTopicId != null) 
                  {
                     <a class="discourse-link" href="@Model.DiscourseTopicUrl" target="_blank">Continue this discussion on Discourse &raquo;</a>
                  }
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
