@model HomeIndexViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="four columns">
    <aside class="sideMenu">
        <div class="btn">
            <a class="clean" href="/contact">
                <h4>Submit <i class="icon-publish"></i>your WTF</h4>
            </a>
        </div>
    </aside>

    <aside>
        <h5 class="heading"><i class="icon-list"></i>Sidebar WTF</h5>
        <div class="articleList">
            <ul>
                @foreach (var sidebar in Model.GetSideBarWtfs())
                { 
                    <li class="code">
                        <div><a class="clean" href="@sidebar.Url">@sidebar.Title</a></div>
                    </li>
                }
            </ul>
        </div>
       
       <h5 class="heading"><i class="icon-docs"></i>Content</h5>
       <div class="articleList">
          <ul>
             <li><div><a href="/articles/random">Random Article</a></div></li>
             <li><div><a href="#">Free WTF Swag</a></div></li>
          </ul>
       </div>
    </aside>

    <div class="container da-space hideNonDesktop">
        <div class="daBlock da-300x250">
            <img src="/content/images/banner300.gif">
        </div>

        <div class="container da-space hideNonDesktop">
            <div class="daBlock da-300x600">
                <img src="/content/images/banner300x600.jpg">
            </div>
        </div>
    </div>
</div>

<div class="eight columns">
    @foreach (var article in Model.Articles)
    {
        @Html.Partial(Views.Shared.PartialArticleItem, article)
    }
</div>

<div style="float: right;">
    <a href="/articles">View Article Archives &raquo;</a>
</div>
