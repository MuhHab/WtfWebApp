@model WtfViewModelBase

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
   <title>@Model.PageTitle</title>
   <meta charset="utf-8" />
   <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
   <meta name="description" content="" />
   <meta name="keywords" content="" />
   <meta name="author" content="humans.txt" />

   <link rel="icon" href="/favicon.ico" />

   <meta name="viewport" content="width=device-width, initial-scale=1.0" />

   <link rel="stylesheet" href="/content/css/gumby.css" />
   <link rel="stylesheet" href="/content/css/animate.min.css" />
   <link rel="stylesheet" href="/content/css/screen.css" />
   <link rel="stylesheet" href="/content/css/prism.css" />
   <link rel="stylesheet" href="/content/css/jquery.qtip.min.css" />
   <link rel="stylesheet" href="/content/css/custom.css" />

   <script src="/scripts/modernizr-2.6.2.min.js"></script>

</head>
<body class="noise">

   @Html.Partial(Views.Shared.PartialNavigationMenu, Model.NavigationMenu)

   @if (Model.ShowLeaderboardAd)
   {
      @Html.Partial(Views.Shared.PartialLeaderboardAd, Model.GetNextAd(Dimensions.Leaderboard))
   }

   @if (Model.SuccessMessage != null)
   {
      <div class="message success">
         @Model.SuccessMessage
      </div>
   }

   @if (Model.ErrorMessage != null)
   {
      <div class="message error">
         @Model.ErrorMessage
      </div>
   }

   <div id="wrapper">
      <div class="row">
         <div class="twelve columns">
            @RenderBody()
         </div>
      </div>
   </div>

   <div class="container">
      <footer>
         <div class="row horizontal">
            <ul>
               <li><a href="/info/advertise">Advertise</a></li>
               <li><a href="/contact">Contact</a></li>
               <li><a href="/info/privacy">Privacy Policy &amp; Disclaimer</a></li>
               <li><a href="http://syndication.thedailywtf.com/TheDailyWtf">RSS</a></li>
            </ul>
            <hr />
         </div>
         <div class="row">
            <p class="hideMobile hideTablet" style="float: right;">
               Hosted on a <a href="http://www.hivelocity.net/">dedicated server</a> at HiVelocity
               &bull; Deployed with <a href="http://inedo.com/landing/buildmaster">BuildMaster</a>
            </p>
            <p style="float: left;">@Model.Copyright - v@(Model.Version)</p>
         </div>
      </footer>
   </div>

   @if (Model.DiscourseMessage != null)
   {
      <div class="message error">
         @Model.DiscourseMessage
      </div>
   }

   <!--[if lt IE 9]>
   <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
   <script>window.jQuery || document.write('<script src="/scripts/jquery-1.10.2.min.js"><\/script>')</script>
   <![endif]-->
   <!--[if gte IE 9]><!-->
   <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.1/jquery.min.js"></script>
   <script>window.jQuery || document.write('<script src="/scripts/jquery-2.0.1.min.js"><\/script>')</script>
   <!--<![endif]-->
   <script src="/scripts/gumby.min.js"></script>

   <script src="/scripts/jquery.qtip-2.2.0.min.js"></script>

   <script src="/scripts/plugins.js"></script>
   <script src="/scripts/main.js"></script>
   <script src="/scripts/prism.js"></script>
   <script src="/scripts/custom.js"></script>

   <!--[if lt IE 8 ]>
   <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"></script>
   <script>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
   <![endif]-->
</body>
</html>

